{
  "name": "cerberus-frontend",
  "version": "1.0.0",
  "description": "Chrome extension for phishing detection",
  "scripts": {
    "build": "tsc && rollup -c && npm run copy-assets",
    "copy-assets": "cp manifest.json dist/ && cp -r public dist/ && cp src/content/overlay/overlay.css dist/content/overlay/",
    "watch": "tsc --watch",
    "pack": "sh scripts/build-and-pack.sh"
  },
  "dependencies": {},
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.9",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/chrome": "^0.0.254",
    "rollup": "^4.52.5",
    "tslib": "^2.8.1",
    "typescript": "^5.3.0"
  }
}
